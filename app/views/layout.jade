doctype
html
    head
        meta(charset="utf-8")
        title #{title}
        include ./includes/head
        style.
            body {
                margin-top: 58px;
            }
            .thumbnail {
                overflow: hidden;
            }
            .thumbnail img {
                width: 155px;
                height: 200px !important;
            }
            .navbar-header img {
                width: 50px;
                height: 50px;
                float: left;
                margin-right: 5px;
            }
            .row img {
                width: 201px;
                height: 285px;
            }
            .dl-horizontal dd {
                margin: 10px 0px 10px 180px;
            }
            .dl-horizontal h2 {
                margin-bottom: 20px;
            }
    body
        include ./includes/header
        block content