.container
    .router-view
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    img(src="/img/logo.png")
                    a.navbar-brand(href="/")  团子的书店
                div#navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href="/cart") 购物车
                        li(href="#") 
                            a(href="#") 我的订单
                    if user
                        p.navbar-text.navbar-right
                            span 欢迎您，#{user.name}
                            span &nbsp;|&nbsp;
                            a.navbar-link(href="/logout") 登出
                    else
                        p.navbar-text.navbar-right
                            a.navbar-link(href="#", data-toggle="modal",data-target="#signupModal") 注册
                            span &nbsp;|&nbsp;
                            a.navbar-link(href="#", data-toggle="modal",data-target="#signinModal") 登陆
                    form.navbar-form.navbar-right(method="GET",action="/results")
                        .form-group
                            input.form-control(type="text",placeholder="电影名",name='q')
                        button.btn.btn-success(type="submit") 搜索
