extends ../layout

block content
    .container
        .row 
                h3 #{keyword}
                if books && books.length > 0
                    each item in books
                        .col-md-2
                            .thumbnail
                                a(href="/book/#{item._id}")
                                    img(src="#{item.poster}",alt="#{item.title}")
                                    .caption
                                        h4 #{item.title}
                                        .row
                                            .col-md-6
                                                p: a.btn.btn-primary(href="/book/#{item._id}",role="button") 购物车
                                            .col-md-6
                                                p: a.btn.btn-primary(href="/book/#{item._id}",role="button") 购买
        .row
            .col-md-4
            .col-md-4       
                if totalPage > 1         
                    ul.pagination
                        - for (var i = 0; i < totalPage; i++) {
                            - if (currentPage == (i + 1)) {
                                li.active
                                    span #{currentPage}
                            - }
                            - else {
                                li
                                    a(href='/results?p=#{i}&#{query}') #{i + 1}
                            - }
                        - }